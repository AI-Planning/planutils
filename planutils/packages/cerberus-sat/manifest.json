{
    "name": "Cerberus planner for satisficing planning",
    "description": "https://github.com/ctpelok77/fd-red-black-postipc2018",
    "install-size": "20K",
    "dependencies": [
        "cerberus"
    ],
    "endpoint": {
        "services": {
            "solve": {
                "args": [
                    {
                        "name": "domain",
                        "type": "file",
                        "description": "domain file"
                    },
                    {
                        "name": "problem",
                        "type": "file",
                        "description": "problem file"
                    }
                ],
                "call": "cerberus-sat {domain} {problem}",
                "return": {
                    "type": "generic",
                    "files": "*plan*"
                }
            }
        }
    }
}