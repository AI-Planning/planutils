{
    "name": "kstar",
    "description": "Kstar planner",
    "install-size": "36M",
    "dependencies": [],
   
    "endpoint": {
  
        "type": "custom",
  
        "args": [
            {"name": "domain",
            "type": "file",
            "description": "domain file"},

            {"name": "problem",
            "type": "file",
            "description": "problem file"}
        ],      
  
        "services": {
            "solve": {
                "args": [
                    {"name": "heuristic",
                    "type": "string",
                    "description": "specification for which heuristic to use",
                    "default":"blind()"},

                    {"name":"k",
                    "type":"int",
                    "description":"Number of plans",
                    "default":10}
                ],

                "call": "kstar {domain} {problem} --search 'kstar({heuristic},k={k},json_file_to_dump=result.json)'",
        
                "return": {
                    "type": "json",
                    "file": "result.json"
                }
            }
        }
    }   
}